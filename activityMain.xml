<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E1B1919"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/helplinebttn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#658A4B"
        android:src="@drawable/helpline"
        android:contentDescription="Helpline button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilimgbutton"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <ImageButton
        android:id="@+id/profilimgbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#779E5B"
        android:contentDescription="Profile button"
        android:src="@drawable/profile2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <TextView
        android:id="@+id/textView2"
        style="@style/MenuText"
        android:text="Helpline"
        app:layout_constraintBottom_toTopOf="@+id/reminderbttn"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helplinebttn"
        app:layout_constraintVertical_bias="0.51" />

    <ImageButton
        android:id="@+id/reminderbttn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="72dp"
        android:background="@null"
        android:src="@drawable/reminder"
        android:contentDescription="reminder button"
        app:layout_constraintBottom_toTopOf="@+id/cropsuggestionButton"
        app:layout_constraintEnd_toStartOf="@+id/buybttn"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helplinebttn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        style="@style/MenuText"
        android:layout_marginEnd="108dp"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/buybttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilimgbutton"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/remindertext"
        style="@style/MenuText"
        android:layout_marginTop="16dp"
        android:text="Reminders"
        app:layout_constraintBottom_toTopOf="@+id/cropsuggestionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buybttn"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        style="@style/MenuText"
        android:text="   Buy   "
        app:layout_constraintBottom_toTopOf="@+id/govnbttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/remindertext"
        app:layout_constraintTop_toBottomOf="@+id/buybttn" />

    <TextView
        android:id="@+id/textView3"
        style="@style/MenuText"
        android:layout_marginBottom="36dp"
        android:text=" Crop Suggestion "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        style="@style/MenuText"
        android:layout_marginEnd="8dp"
        android:text="Government Schemes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/govnbttn"
        app:layout_constraintVertical_bias="0.409" />

    <ImageButton
        android:id="@+id/buybttn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="72dp"
        android:background="@null"
        android:src="@drawable/buy2"
        android:contentDescription="Buy button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilimgbutton"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/cropsuggestionButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:contentDescription="CropSuggestion button"
        android:src="@drawable/cropsuggestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/govnbttn"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

    <ImageButton
        android:id="@+id/govnbttn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:contentDescription="Govn button"
        android:src="@drawable/govermentschemes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buybttn"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EB2E312E"
        android:padding="16dp"
        app:columnCount="3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp"> <!-- Optional background -->

        <!-- Name -->

        <!-- Age (Placed in Row 1) -->

        <TextView
            android:id="@+id/txt"
            style="@style/MenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Satish Vijay Singh"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F0ECEC"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/ageText"
            style="@style/MenuText"
            android:layout_marginBottom="8dp"
            android:text="AGE: 34"
            android:textColor="#E2DDDD"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/balancetext"
            style="@style/MenuText"
            android:layout_marginBottom="8dp"
            android:text="BALANCE : 25coins"
            android:textColor="#E2DDDD"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="3" />

        <!-- Profile Image (Aligned to the right) -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowSpan="2"
            app:srcCompat="@drawable/insaan" />
    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
